<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/team_flag"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:layout_marginEnd="30dp"
                android:elevation="20dp">

                <ImageView
                    android:id="@+id/stat_team_logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/stat_team_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Games:"
                android:textSize="28sp"
                android:layout_marginVertical="30dp"
                android:layout_marginLeft="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight=".333">
                    <TextView
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wins"
                        android:layout_marginHorizontal="3dp"
                        android:gravity="center"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/total_wins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Wins"
                        android:layout_marginHorizontal="3dp"
                        android:gravity="center"
                        android:textSize="20sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight=".333">
                    <TextView
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loses"
                        android:layout_marginHorizontal="3dp"
                        android:gravity="center"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/total_loses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Loses"
                        android:layout_marginHorizontal="3dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_weight="0.33"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight=".333">
                    <TextView
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Percentage"
                        android:layout_marginHorizontal="3dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_weight="0.33"/>
                    <TextView
                        android:id="@+id/total_percentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Loses"
                        android:layout_marginHorizontal="3dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_weight="0.33"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginVertical="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home:"
                android:textSize="28sp"
                android:layout_marginLeft="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight=".333">
                    <TextView
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Home Wins"
                        android:layout_marginHorizontal="3dp"
                        android:gravity="center"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/home_wins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Wins"
                        android:layout_marginHorizontal="3dp"
                        android:gravity="center"
                        android:textSize="20sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight=".333">
                    <TextView
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Home Loses"
                        android:layout_marginHorizontal="3dp"
                        android:gravity="center"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/home_loses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Loses"
                        android:layout_marginHorizontal="3dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_weight="0.33"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight=".333">
                    <TextView
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Percentage"
                        android:layout_marginHorizontal="3dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_weight="0.33"/>
                    <TextView
                        android:id="@+id/home_percentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Loses"
                        android:layout_marginHorizontal="3dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_weight="0.33"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>