<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/full_game_id"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00000000"
            android:textSize="1sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
    </RelativeLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#FFFFFF"
      android:gravity="center"
      android:orientation="horizontal">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_marginVertical="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/team_one_image"
            android:layout_width="130dp"
            android:layout_height="89dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter" />
        <TextView
            android:id="@+id/score_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Home"
            android:textFontWeight="700"
            android:layout_alignBottom="@+id/imageCategory2"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/team_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_alignBottom="@+id/imageCategory2"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>
      <TextView
          android:id="@+id/win_lose"
          android:layout_width="70dp"
          android:layout_height="50dp"
          android:layout_gravity="center"
          android:layout_margin="10dp"
          android:text="W - L"
          android:textColor="@color/black"
          android:gravity="center"
          android:textSize="28sp"/>
      <LinearLayout
          android:layout_width="130dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="vertical">

                  <ImageView
                      android:id="@+id/team_two_image"
                      android:layout_width="130dp"
                      android:layout_height="89dp"
                      android:layout_margin="10dp"
                      android:layout_gravity="center"
                      android:scaleType="fitCenter" />
                  <TextView
                      android:id="@+id/score_away"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="5dp"
                      android:textFontWeight="700"
                      android:text="Away"
                      android:textColor="@color/black"
                      android:layout_alignBottom="@+id/imageCategory2"
                      android:gravity="center"
                      android:textSize="20sp" />

          <TextView
              android:id="@+id/team_two"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/imageCategory2"
              android:layout_marginBottom="5dp"
              android:gravity="center"
              android:textColor="@color/black"
              android:textSize="18sp" />


      </LinearLayout>
  </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>